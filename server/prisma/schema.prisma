generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        String   @id @default(cuid())
  name      String?
  category  String?
  metalType String?
  purity    String?
  grossWeight Float?
  netWeight Float?
  stoneDetails String?
  makingCharges String?
  wastage   String?
  finalPrice Float?
  and       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Supplier {
  id        String   @id @default(cuid())
  name      String?
  address   String?
  and       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id        String   @id @default(cuid())
  supplierId String?
  itemId    String?
  quantity  Int?
  rate      Float?
  and       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sale {
  id        String   @id @default(cuid())
  customerId String?
  itemId    String?
  quantity  Int?
  rate      Float?
  and       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String   @id @default(cuid())
  name      String?
  address   String?
  and       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  role      String?
  and       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
