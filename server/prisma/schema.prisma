generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        String   @id @default(cuid())
  item      String?
  category  String?
  metal     String?
  purity    String?
  gross     String?
  net       String?
  stone     String?
  making    String?
  wastage   String?
  final     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Supplier {
  id        String   @id @default(cuid())
  supplier  String?
  address   String?
  contact   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id        String   @id @default(cuid())
  purchase  Boolean  @default(false)
  supplier  String?
  items     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sale {
  id        String   @id @default(cuid())
  sale      String?
  customer  String?
  items     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String   @id @default(cuid())
  customer  String?
  address   String?
  contact   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  user      String?
  role      String?
  access    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
